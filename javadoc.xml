<project name="WMachine-doc" default="doc" basedir=".">
    <description>
        WMachine build file
    </description>
    <!-- set global properties for this build -->
    <property name="src" location="src" />
    <property name="web" location="web" />
    <property name="build" location="classes" />
    <property name="dist"  location="dist" />
    <property name="tomcat-home" location="/usr/share/tomcat8" />
    
    <path id="project-classpath">
        <fileset dir="${tomcat-home}/lib" includes="*.jar" />
        <fileset dir="${web}/WEB-INF/lib" includes="*.jar" />
    </path>

    <target name="doc">
        <javadoc destdir="doc" author="true" version="true" use="true" windowtitle="W Machine" classpathref="project-classpath">
            <fileset dir="src" defaultexcludes="yes">
              <include name="pl/polsl/**"/>
            </fileset>
            <link href="http://docs.oracle.com/javase/8/docs/api/"/>
            <link href="http://docs.oracle.com/javaee/7/api/"/>
        </javadoc>
    </target>

</project>
